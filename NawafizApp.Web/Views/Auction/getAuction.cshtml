@{ int i = 0;}
<style>
    #myCarousel {
        margin-top: -35px !important;
        margin-right: -9px !important;
        margin-left: -9px !important;
    }

    .carousel-indicators li {
        border: 1px solid #297736;
    }

    .carousel-indicators .active {
        margin: 0;
        width: 12px;
        height: 12px;
        background-color: #297736;
    }
    #grn {
